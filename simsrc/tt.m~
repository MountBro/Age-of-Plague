c = city (4,4, 200);

for i = 1:3
    for j = 1:4
        if [i, j] ~= [2,2]
            c.tilesIndex = [c.tilesIndex, [i, j]];
            t = tile(2 * i - j, i + 3*j, 20);  
            t.infected = mod (5* i + 13*j, 21); % initialize infected population
            c.tiles{i, j} = t;
        end
    end
end



